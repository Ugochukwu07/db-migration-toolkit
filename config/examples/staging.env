# Staging Environment Configuration Example
# Copy relevant sections to your config/config.env file

# ==============================================
# REMOTE DATABASE (Production)
# ==============================================
REMOTE_HOST="prod-cluster.company.com"
REMOTE_PORT="25060"
REMOTE_USER="staging_sync_user"
REMOTE_PASS="staging_sync_secure_password"

# ==============================================
# LOCAL DATABASE (Staging)
# ==============================================
LOCAL_USER="staging_admin"
LOCAL_PASS="staging_admin_password"
LOCAL_HOST="staging-db.internal"
LOCAL_PORT="3306"

# ==============================================
# STAGING-SPECIFIC SETTINGS
# ==============================================
# Sync major application databases
SYNC_DATABASES="main_app,user_management,product_catalog,order_processing,analytics,billing"

# Comprehensive table sync for testing
TABLE_SYNC_CONFIG_MULTILINE="
main_app:staging_main:*
user_management:staging_users:*
product_catalog:staging_products:products,categories,inventory
order_processing:staging_orders:*
analytics:staging_analytics:user_metrics,sales_data,reports
billing:staging_billing:invoices,payments,subscriptions
logs:staging_logs:error_logs,access_logs,audit_trail
"

# Moderate threading for staging server
MAX_THREADS=6
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=15

# Staging database prefix
LOCAL_DB_PREFIX="staging_"

# ==============================================
# STAGING OPTIMIZATIONS
# ==============================================
# Regular monitoring intervals
PROGRESS_REPORT_INTERVAL=5
MONITOR_REFRESH_INTERVAL=2

# Keep more backups for staging analysis
BACKUP_RETENTION_DAYS=14

# Moderate logging for staging
DEBUG_MODE="false"
LOG_LEVEL="INFO"

# Production-like character sets
CHARSET="utf8mb4"
COLLATION="utf8mb4_unicode_ci"

# SQL mode for compatibility testing
SQL_MODE="TRADITIONAL"

# ==============================================
# STAGING NOTIFICATIONS
# ==============================================
# Email notifications for staging team
ENABLE_EMAIL_NOTIFICATIONS="true"
EMAIL_TO="staging-team@company.com"
EMAIL_FROM="staging-sync@company.com"

# Slack webhook for staging updates
ENABLE_WEBHOOK_NOTIFICATIONS="true"
WEBHOOK_URL="https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK"

# ==============================================
# STAGING IMPORT SETTINGS
# ==============================================
# For importing additional test data
IMPORT_LOCAL_DB_PREFIX="test_"
IMPORT_BACKUP_DIR="./staging-backups"

# ==============================================
# PERFORMANCE TUNING FOR STAGING
# ==============================================
# Extended timeouts for large datasets
MYSQL_CONNECT_TIMEOUT=120
MYSQL_READ_TIMEOUT=600

# Validation and testing
VALIDATE_CONFIG="true"
TEST_CONNECTIONS="true"
