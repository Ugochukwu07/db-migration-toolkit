# Production Synchronization Configuration Example
# Copy relevant sections to your config/config.env file
# WARNING: This is for production-to-backup or disaster recovery scenarios

# ==============================================
# REMOTE DATABASE (Primary Production)
# ==============================================
REMOTE_HOST="primary-prod-cluster.company.com"
REMOTE_PORT="25060"
REMOTE_USER="backup_user"
REMOTE_PASS="backup_user_secure_password"

# ==============================================
# LOCAL DATABASE (Secondary/Backup)
# ==============================================
LOCAL_USER="backup_admin"
LOCAL_PASS="backup_admin_secure_password"
LOCAL_HOST="backup-db.company.com"
LOCAL_PORT="3306"

# ==============================================
# PRODUCTION BACKUP SETTINGS
# ==============================================
# Critical databases for disaster recovery
SYNC_DATABASES="customer_data,financial_records,user_accounts,transaction_logs,audit_trail,billing_system,inventory_management"

# High-priority tables (critical data first)
TABLE_SYNC_CONFIG_MULTILINE="
customer_data:backup_customers:*
financial_records:backup_finance:*
user_accounts:backup_users:users,profiles,authentication,sessions
transaction_logs:backup_transactions:*
audit_trail:backup_audit:*
billing_system:backup_billing:invoices,payments,subscriptions,tax_records
inventory_management:backup_inventory:products,stock,warehouses
"

# High-performance settings for production
MAX_THREADS=8
MAX_RETRY_ATTEMPTS=5
RETRY_DELAY=30

# Production database prefix
LOCAL_DB_PREFIX="backup_"

# ==============================================
# PRODUCTION OPTIMIZATIONS
# ==============================================
# Efficient monitoring for production
PROGRESS_REPORT_INTERVAL=10
MONITOR_REFRESH_INTERVAL=5

# Extended backup retention for compliance
BACKUP_RETENTION_DAYS=90

# Production logging
DEBUG_MODE="false"
LOG_LEVEL="WARN"

# Production character sets
CHARSET="utf8mb4"
COLLATION="utf8mb4_unicode_ci"

# Strict SQL mode for data integrity
SQL_MODE="STRICT_TRANS_TABLES,ERROR_FOR_DIVISION_BY_ZERO,NO_AUTO_CREATE_USER,NO_ENGINE_SUBSTITUTION"

# ==============================================
# PRODUCTION RELIABILITY
# ==============================================
# Extended timeouts for large production datasets
MYSQL_CONNECT_TIMEOUT=300
MYSQL_READ_TIMEOUT=1800

# Comprehensive validation
VALIDATE_CONFIG="true"
TEST_CONNECTIONS="true"

# Always drop and recreate for clean backups
DROP_EXISTING_TABLE="true"

# ==============================================
# PRODUCTION NOTIFICATIONS
# ==============================================
# Critical notifications for production team
ENABLE_EMAIL_NOTIFICATIONS="true"
EMAIL_TO="production-team@company.com,dba-team@company.com"
EMAIL_FROM="prod-backup@company.com"

# Multiple notification channels
ENABLE_WEBHOOK_NOTIFICATIONS="true"
WEBHOOK_URL="https://hooks.slack.com/services/YOUR/PRODUCTION/WEBHOOK"

# ==============================================
# DISASTER RECOVERY SETTINGS
# ==============================================
# Separate backup location for disaster recovery
IMPORT_BACKUP_DIR="./disaster-recovery-backups"
IMPORT_LOCAL_DB_PREFIX="dr_"

# ==============================================
# SECURITY CONSIDERATIONS
# ==============================================
# Note: In production, consider:
# 1. Using environment variables instead of config file
# 2. SSL connections to databases
# 3. Network encryption
# 4. Regular password rotation
# 5. Audit logging of backup operations
# 6. Encrypted backup storage

# Example environment variable usage:
# REMOTE_PASS="${DB_BACKUP_PASSWORD}"
# LOCAL_PASS="${BACKUP_DB_PASSWORD}"

# ==============================================
# MONITORING AND ALERTING
# ==============================================
# Production monitoring should include:
# - Backup completion status
# - Data integrity verification
# - Performance metrics
# - Storage space monitoring
# - Network connectivity health
# - Security event logging
