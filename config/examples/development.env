# Development Environment Configuration Example
# Copy relevant sections to your config/config.env file

# ==============================================
# REMOTE DATABASE (Production)
# ==============================================
REMOTE_HOST="prod-db.company.com"
REMOTE_PORT="3306"
REMOTE_USER="readonly_user"
REMOTE_PASS="readonly_secure_password"

# ==============================================
# LOCAL DATABASE (Development)
# ==============================================
LOCAL_USER="root"
LOCAL_PASS="dev_password"
LOCAL_HOST="localhost"
LOCAL_PORT="3306"

# ==============================================
# DEVELOPMENT-SPECIFIC SETTINGS
# ==============================================
# Sync a subset of databases for development
SYNC_DATABASES="app_db,user_db,product_db"

# Table sync for specific features
TABLE_SYNC_CONFIG="app_db:dev_app:users,products,orders|user_db:dev_users:profiles,preferences|logs_db:dev_logs:error_logs"

# Conservative threading for dev machine
MAX_THREADS=2
MAX_RETRY_ATTEMPTS=2
RETRY_DELAY=5

# Development database prefix
LOCAL_DB_PREFIX="dev_"

# ==============================================
# DEVELOPMENT OPTIMIZATIONS
# ==============================================
# Fast feedback
PROGRESS_REPORT_INTERVAL=3
MONITOR_REFRESH_INTERVAL=1

# Keep fewer backups on dev machine
BACKUP_RETENTION_DAYS=3

# Enable debug mode for development
DEBUG_MODE="true"
LOG_LEVEL="DEBUG"

# Character set for compatibility
CHARSET="utf8mb4"
COLLATION="utf8mb4_unicode_ci"

# ==============================================
# DEVELOPMENT NOTIFICATIONS
# ==============================================
# Disable notifications for dev
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_WEBHOOK_NOTIFICATIONS="false"
